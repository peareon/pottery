    <header>
        <div class="menu-container">
            <div class="logo-div">
                <a href="/" class="logo-link">
                    <img src="/images/logosolo.png" class="menu-logo" >WWW
                </a>
                <div class="logo-name">Ana RM</div>
            </div>
            
            <navbar class="div-menu-options" id="topnav">
                <div class="dropdown-coleccion" data-dropdown>
                    <button class="Galeria button-animated" data-dropdown-button>COLECCIONES</button>
                    <div class="colecciones-menu">
                        <div class="colecciones-options">
