                <button class="icon-menu button-animated" onclick="responsiveMenu()"><i class="fa fa-bars"></i></button>
                <script>
                    function responsiveMenu(){
                        const menu = document.getElementById("topnav");
                        const dropdown = document.getElementsByClassName("dropdown-coleccion")[0];
                        const menuButtons = document.getElementsByClassName("button-animated");
                        const elementTop = menu.getBoundingClientRect().top;
                        if (menu.className === "div-menu-options") {
                            menu.className += " responsive";
                            menu.style.top = -1*elementTop+'px';
                        } else if (menu.classList.contains('responsive') && dropdown.classList.contains('isactive')) {
                            dropdown.classList.remove('isactive');
                            menuButtons[0].classList.remove('menu-mobile')
                            menuButtons[1].classList.remove('menu-mobile')
                            menuButtons[2].classList.remove('menu-mobile')
                            menuButtons[3].classList.remove('menu-mobile')
                        }
                        else{
                            menu.className = "div-menu-options";
                        }
                    }
                </script>
